<p id="notice"><%= notice %></p>

<h1>Employees</h1>
<ol>
<table>
  <thead>
    <tr>
    <th>Sr.no</th>
    <th>Profile photo</th>
    <th>Name</th>
    <th>City</th>
    <th>Manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
      <td><li></li></td>
      <td><%= link_to (image_tag employee.photo.url(:small)) , employee %></td>
      <td><%= employee.name %></td>
      <td><%= employee.city_id %></td>
      <td><%= employee.manager.present? ?employee.manager.name : "" %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</ol>

<br>

